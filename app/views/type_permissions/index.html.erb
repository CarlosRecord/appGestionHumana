<section class="text-gray-600 body-font bg-gray-200 bg-opacity-75 pb-40">
  <div class="p-6 flex">
    <h1 class="text-3xl">
      Listado tipos de permisos
    </h1>
  </div>
  <div class="px-3 py-4 flex justify-center">
    <table class="w-9/12 text-md bg-white shadow-md rounded mb-4 table-auto">
      <tbody>
        <tr class="border-b">
          <th class="text-center p-3 px-5">Descripción</th>
          <th class="p-3 px-5 flex justify-end"><%= link_to "Agregar", new_type_permission_path, class: "mr-3 text-sm bg-blue-500 hover:bg-blue-700 text-white py-1 px-2 rounded focus:outline-none focus:shadow-outline" %></th>
        </tr>
          <% @typePermissions.each do |typePermission| %>
            <tr class="border-b hover:bg-orange-100 bg-gray-100">
              <td class="p-3 px-5"><%= typePermission.description %></td>
              <td class="p-3 px-5 flex justify-end">
                <%= link_to "Editar", edit_type_permission_path(typePermission), class: "mr-3 text-sm bg-green-500 hover:bg-green-700 text-white py-1 px-2 rounded focus:outline-none focus:shadow-outline" %>
                <%= link_to "Eliminar", typePermission, method: :delete, data: { confirm: "¿Estás seguro de eliminar este tipo de permiso?" }, class: "text-sm bg-red-500 hover:bg-red-700 text-white py-1 px-2 rounded focus:outline-none focus:shadow-outline" %>
              </td>
            </tr>
          <% end %>
      </tbody>
    </table>
  </div>
</section>
